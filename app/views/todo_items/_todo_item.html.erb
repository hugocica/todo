<li id="<%= todo_item.id %>" class="row clearfix">
	<% if todo_item.completed? %>
		<div class="complete">
			<i class="fa fa-bars"></i>
			<%= link_to uncomplete_todo_list_todo_item_path(@todo_list, todo_item.id), remote: true, method: :patch do %>
				<i style="opacity: 0.4;" class="fa fa-check-square-o"></i>
			<% end %>
		</div>
		<div class="todo_item">
			<p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), remote: true, method: :delete, data: { confirm: "Are you sure?" } do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% else %>
		<div class="complete">
			<i class="fa fa-bars"></i>
			<%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), remote: true, method: :patch do %>
				<i class="fa fa-square-o"></i>
			<% end %>
		</div>
		<div class="todo_item" contenteditable="true">
			<p><%= todo_item.content %></p>
		</div>
		<div class="trash">
			<%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), remote: true, method: :delete, data: { confirm: "Are you sure?" } do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% end %>
</li>